<h1> Products </h1>
<table>
  <thead>
    <th>Code</th>
    <th>Name</th>
    <th>Price</th>
    <th>Promotions</th>
    <th>Action</th>
  </thead>

  <tbody>
    <% items.each do |item| %>
      <tr>
        <td> <%= item.code %></td>
        <td> <%= item.name %></td>
        <td> <%= item.price %></td>
        <td> <%= item_has_promotion?(item) %></td>
        <td> <%= button_to "Add to cart", line_items_path(item) %></td>
      </tr>
    <% end -%>
  </tbody>
</table>
